{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>{{ page_title }}</h1>

     {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }} 
        </div>
        </br>
        <a>Vos fonds ont bien été ajoutés au porte monnaie.</a>
        </br>
        <a>Votre porte monnaie est crédité de {{ app.user.wallet.amount }} thunes.</a>
        </br>
        <a href="{{ path('userloggedin') }}">Retour à l'accueil</a>
        </br>
        <a href="{{ path('account_addfunds') }}">Ajouter des fonds au porte monnaie</a>
        <div class="mb-3">
            <a href="{{ path('userlogout') }}">Se déconnecter</a>
        </div>
    {% endif %}

</div>
{% endblock %}
