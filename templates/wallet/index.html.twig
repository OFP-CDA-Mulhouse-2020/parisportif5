{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>{{ page_title }}</h1>

     {% if app.user %}
        </br>
        <p>Fonds disponible à la date du {{ wallet_datas.date | format_datetime('full', 'full', locale='fr') }}</p>
        </br>
        <p>Votre porte monnaie est crédité de {{ wallet_datas.amount | format_currency(wallet_datas.currency, locale='fr') }}.</p>
        </br>
        </br>
        <a href="{{ path('account_wallet_add') }}">Ajouter des fonds au porte monnaie</a>
        </br>
        <a href="{{ path('account_wallet_retire') }}">Retirer des fonds au porte monnaie</a>
        </br>
        <a href="{{ path('account_wallet_history') }}">Historiques des transactions du porte monnaie</a>
    {% endif %}

</div>
{% endblock %}
