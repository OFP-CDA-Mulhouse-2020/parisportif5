        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h1>{{ page_title }}</h1>


        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}
                <br/>
                Montant du porte monnaie : {{ app.user.wallet.amount }}
                <br/>
                <a href="{{ path('account_addfunds')}}">Ajouter des fonds au porte monnaie</a>
            </div>
            <div>
                {% for run in RunsCompetition %}
{#                    <a href="{{ path('betCategories', {'competition_id': run.competition.id, 'competitionSlug': run.competition.name, 'sportSlug': run.competition.sport.name}) }}">{{ run.name }}</a>#}
                    <a>{{ run.name }}</a>
                    <br>
                {% endfor %}
            </div>
            <br>
            <br>
            <div class="mb-3">
                <a href="{{ path('userlogout') }}">Se déconnecter</a>
            </div>
            <div class="mb-3">
                <a href="{{ path('userloggedin') }}">Retour</a>
            </div>
        {%  endif %}
    </div>
{% endblock %}
